<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.thedistantblue.triaryapp.viewmodels.ExerciseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/exercise_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <EditText
            android:id="@+id/exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="@={viewModel.exerciseName}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/exercise_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="@={viewModel.exerciseComments}"
            app:layout_constraintBottom_toTopOf="@+id/exercise_action_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/exercise_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@{viewModel.actionString}"
            android:onClick="@{()->viewModel.action()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/set_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:text="Set 1"
            app:layout_constraintBottom_toTopOf="@+id/set_2"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/set_1_reps"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.firstSetReps}"
            app:layout_constraintBottom_toTopOf="@+id/set_2_reps"
            app:layout_constraintEnd_toStartOf="@+id/set_1_weight"
            app:layout_constraintStart_toEndOf="@+id/set_1" />

        <EditText
            android:id="@+id/set_1_weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.firstSetWeight}"
            app:layout_constraintBottom_toTopOf="@+id/set_2_weight"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/set_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:text="Set 2"
            app:layout_constraintBottom_toTopOf="@+id/set_3"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/set_2_reps"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.secondSetReps}"
            app:layout_constraintBottom_toTopOf="@+id/set_3_reps"
            app:layout_constraintEnd_toStartOf="@+id/set_2_weight"
            app:layout_constraintStart_toEndOf="@+id/set_2" />

        <EditText
            android:id="@+id/set_2_weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.secondSetWeight}"
            app:layout_constraintBottom_toTopOf="@+id/set_3_weight"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/set_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:text="Set 3"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/set_3_reps"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.thirdSetReps}"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/set_3_weight"
            app:layout_constraintStart_toEndOf="@+id/set_3" />

        <EditText
            android:id="@+id/set_3_weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.thirdSetWeight}"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/set_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Set 4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <EditText
            android:id="@+id/set_4_reps"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.fourthSetReps}"
            app:layout_constraintEnd_toStartOf="@+id/set_4_weight"
            app:layout_constraintStart_toEndOf="@+id/set_4"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <EditText
            android:id="@+id/set_4_weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.fourthSetWeight}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/set_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Set 5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_4" />

        <EditText
            android:id="@+id/set_5_reps"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.fifthSetReps}"
            app:layout_constraintEnd_toStartOf="@+id/set_5_weight"
            app:layout_constraintStart_toEndOf="@+id/set_5"
            app:layout_constraintTop_toBottomOf="@+id/set_4_reps" />

        <EditText
            android:id="@+id/set_5_weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.fifthSetWeight}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_4_weight" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="reps"
            app:layout_constraintBottom_toTopOf="@+id/set_1_reps"
            app:layout_constraintEnd_toStartOf="@+id/set_1_weight"
            app:layout_constraintStart_toEndOf="@+id/set_1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="weight"
            app:layout_constraintBottom_toTopOf="@+id/set_1_weight"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>